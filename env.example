# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=IoT Dashboard <your-email@gmail.com>

# Server Configuration
PORT=5000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-here
RESET_TOKEN_EXPIRY=24h

# CORS
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info

# Database (for future use)
MONGODB_URI=mongodb://localhost:27017/iot-dashboard
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iot_dashboard
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Redis (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MQTT (Mosquitto) configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_PROTOCOL=mqtt
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=
MQTT_SUBSCRIBE_TOPICS=sensors/#
MQTT_QOS=0